{% extends 'base.html.twig' %}

{% block title %}Connexion au site{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-3">
        </div>
        <div class="col-md-6">
            <div class="bg-light py-3 px-3">
                <h1>Connectez-vous !</h1>
                {% if hasError %}
                    <div class="alert alert-danger">
                    Une erreur est survenue: Adresse ou Mot de Passe invalide !
                    </div>
                {% endif %}
                <form action="{{ path('account_login') }}" method="POST">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="text" name="_username" id="email" class="form-control"
                           placeholder="Adresse Email ..." required value="{{ username }}">
                    </div>
                    <div class="form-group">
                        <label for="password">mot de passe</label>
                        <input type="password" name="_password" id="password" class="form-control" placeholder="Mot de passe" required>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Connexion !</button>
                        </button>
                </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
